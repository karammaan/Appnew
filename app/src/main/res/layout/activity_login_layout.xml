<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_lake">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9f2d2b2b"></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounder_rectangle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/email_layout"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mail"
            android:id="@+id/mail_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Your Email"
            android:layout_toRightOf="@id/mail_image"
            android:inputType="textEmailAddress"
            android:id="@+id/email_et"
            android:textColor="#000"
            android:textColorHint="#000"
            android:imeOptions="actionNext"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            />


</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/email_layout"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/password_layout"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/password"
                android:id="@+id/password_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Password"
                android:layout_toRightOf="@id/password_image"
                android:inputType="textPassword"
                android:id="@+id/password_et"
                android:textColor="#000"
                android:textColorHint="#000"
                android:imeOptions="actionDone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                />


        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_layout"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="LOGIN"
            android:textSize="15dp"
            android:textColor="#fff"
            android:background="@drawable/rounder_rectangle"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:onClick="login"
            android:id="@+id/button_login"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_login"
            android:layout_centerHorizontal="true"
            android:text="Forgot password?"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:id="@+id/forget_password_id"
            android:onClick="forgot_pass"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forget_password_id"
            android:layout_centerHorizontal="true"
            android:text="New here!Sign up?"
            android:textColor="#fff"
            android:textSize="15dp"
           android:id="@+id/signnup"
            android:onClick="next"
            android:layout_margin="10dp"
           />



    </RelativeLayout>

</RelativeLayout>