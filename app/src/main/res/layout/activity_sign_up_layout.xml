<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_sea">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9f2d2b2b"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounder_rectangle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"

        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/email_layout"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mail"
                android:id="@+id/mail_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email"
                android:layout_toRightOf="@id/mail_image"
                android:inputType="textEmailAddress"
                android:id="@+id/email_et"
                android:textColor="#000"
                android:textColorHint="#000"
                android:imeOptions="actionNext"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:padding="10dp"
            android:layout_below="@id/email_layout"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/name_layout"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/avatar"
                android:id="@+id/name_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Name"
                android:layout_toRightOf="@id/name_image"
                android:inputType="textPersonName"
                android:id="@+id/name_et"
                android:textColor="#000"
                android:textColorHint="#000"
                android:imeOptions="actionNext"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/age_layout"
            android:layout_below="@id/name_layout"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/age"
                android:id="@+id/age_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Age"
                android:layout_toRightOf="@id/age_image"
                android:inputType="number"
                android:id="@+id/age_et"
                android:maxLength="2"
                android:textColor="#000"
                android:textColorHint="#000"
                android:imeOptions="actionNext"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/age_layout"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/password_layout"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/password"
                android:id="@+id/password_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Password"
                android:layout_toRightOf="@id/password_image"
                android:inputType="textPassword"
                android:id="@+id/password_et"
                android:textColor="#000"
                android:textColorHint="#000"
                android:imeOptions="actionDone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                />


        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_layout"
            android:text="sign up"
            android:textSize="15dp"
            android:textColor="#fff"
            android:background="@drawable/rounder_rectangle"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:onClick="register"
            android:clickable="true"
            android:layout_margin="20dp"
            android:id="@+id/button_signup"

            />




    </RelativeLayout>

</RelativeLayout>